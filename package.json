{
  "name": "pika-plugin-pkg-node",
  "version": "0.0.0",
  "description": "Pika plugin to package a Node.js app into an executable",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/pika-plugin-pkg-node#readme",
  "bugs": "https://github.com/kevinpollet/pika-plugin-pkg-node/issues",
  "repository": "github:kevinpollet/pika-plugin-pkg-node",
  "license": "MIT",
  "keywords": [
    "pika",
    "plugin",
    "nodejs",
    "executable"
  ],
  "scripts": {
    "build": "rm -rf pkg && pack build",
    "format": "prettier --write '*.{json,md}'"
  },
  "devDependencies": {
    "@pika/pack": "0.3.7",
    "@pika/plugin-build-node": "0.4.0",
    "@pika/plugin-ts-standard-pkg": "0.4.0",
    "@pika/types": "0.4.0",
    "husky": "2.4.0",
    "lint-staged": "8.2.0",
    "prettier": "1.18.2",
    "typescript": "3.5.1"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
